<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Amigo.RegisterPages.UserRegister">

    <ContentPage.Content>

        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <StackLayout>
            <ActivityIndicator Grid.RowSpan="2" HorizontalOptions="Center" Color="White" VerticalOptions="Center" IsVisible="False" IsEnabled="True" x:Name="syncIndicator" />
            <BoxView Color="#5ABAFF" Grid.Row="0"/>
        </StackLayout>
        <StackLayout>
            <Label Text="מעדכנים לך את כל הנתונים" TextColor="White"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" x:Name="RegisterText"/>
        </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>